{
    "name": "Mailketing Email",
    "slug": "mailketing",
    "version": "1.0.0",
    "type": "core",
    "description": "Email sending and subscriber management via Mailketing API",
    "author": "AhliWeb",
    "routes": [
        {
            "path": "/cmspanel/email-settings",
            "component": "EmailSettings"
        }
    ],
    "menu": {
        "label": "Email Settings",
        "icon": "Mail",
        "path": "email-settings",
        "group": "CONFIGURATION"
    },
    "permissions": [
        "tenant.email.send",
        "tenant.email.configure",
        "tenant.email.view_logs"
    ],
    "hooks": {
        "actions": [
            "email_sent",
            "email_failed",
            "subscriber_added"
        ],
        "filters": [
            "email_content",
            "email_templates",
            "email_recipients"
        ]
    },
    "settings": {
        "api_token": {
            "type": "password",
            "label": "API Token",
            "description": "Mailketing API token from integration page"
        },
        "from_name": {
            "type": "text",
            "label": "From Name",
            "default": "AWCMS"
        },
        "from_email": {
            "type": "email",
            "label": "From Email",
            "default": "noreply@awcms.com"
        },
        "default_list_id": {
            "type": "number",
            "label": "Default List ID",
            "default": 1
        }
    }
}