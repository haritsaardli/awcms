{
    "name": "Backup Manager",
    "slug": "backup",
    "version": "1.0.0",
    "author": "AWCMS Team",
    "description": "Database backup and restore functionality for AWCMS.",
    "type": "core",
    "requires": [
        "core"
    ],
    "menu": {
        "label": "Backup",
        "icon": "Database",
        "path": "/admin/backup",
        "parent": "settings"
    },
    "routes": [
        {
            "path": "/admin/backup",
            "component": "BackupManager"
        },
        {
            "path": "/admin/backup/scheduler",
            "component": "BackupScheduler"
        },
        {
            "path": "/admin/backup/settings",
            "component": "BackupSettings"
        }
    ],
    "permissions": [
        "plugin.backup.view",
        "plugin.backup.create",
        "plugin.backup.restore",
        "plugin.backup.delete",
        "plugin.backup.schedule"
    ],
    "hooks": {
        "admin_menu_items": "registerMenu",
        "settings_tabs": "registerSettingsTab"
    }
}