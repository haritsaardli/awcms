---
import { Icon } from 'astro-icon/components';
import { t, getLocalizedPath, type Locale } from '../utils/i18n';
import navigation from '../data/navigation.json';
import site from '../data/site.json';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const currentYear = new Date().getFullYear();

function getLabel(item: any): string {
  return item.label[locale] || item.label.id;
}
---

<footer class="bg-gray-900 text-white">
  <!-- Main Footer -->
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center font-bold text-lg">
            S2
          </div>
          <div>
            <div class="font-bold text-lg">{site.site.name}</div>
            <div class="text-xs text-gray-400">{site.site.tagline}</div>
          </div>
        </div>
        <p class="text-gray-400 text-sm mb-4">
          {site.site.description}
        </p>
        <div class="flex items-center gap-3">
          <a href={site.site.socialMedia.facebook} target="_blank" rel="noopener" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-500 transition-colors">
            <Icon name="tabler:brand-facebook" class="w-5 h-5" />
          </a>
          <a href={site.site.socialMedia.instagram} target="_blank" rel="noopener" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-500 transition-colors">
            <Icon name="tabler:brand-instagram" class="w-5 h-5" />
          </a>
          <a href={site.site.socialMedia.youtube} target="_blank" rel="noopener" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-500 transition-colors">
            <Icon name="tabler:brand-youtube" class="w-5 h-5" />
          </a>
          <a href={site.site.socialMedia.twitter} target="_blank" rel="noopener" class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-primary-500 transition-colors">
            <Icon name="tabler:brand-twitter" class="w-5 h-5" />
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="font-bold text-lg mb-4">{t('footer.quick_links', locale)}</h3>
        <ul class="space-y-2">
          {navigation.mainMenu.slice(0, 6).map((item) => (
            <li>
              <a href={getLocalizedPath(item.href, locale)} class="text-gray-400 hover:text-white transition-colors text-sm">
                {getLabel(item)}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="font-bold text-lg mb-4">{t('services.title', locale)}</h3>
        <ul class="space-y-2">
          <li><a href={getLocalizedPath('/layanan/ekstrakurikuler', locale)} class="text-gray-400 hover:text-white transition-colors text-sm">{t('services.extracurricular', locale)}</a></li>
          <li><a href={getLocalizedPath('/layanan/laboratorium', locale)} class="text-gray-400 hover:text-white transition-colors text-sm">{t('services.laboratory', locale)}</a></li>
          <li><a href={getLocalizedPath('/layanan/perpustakaan', locale)} class="text-gray-400 hover:text-white transition-colors text-sm">{t('services.library', locale)}</a></li>
          <li><a href={getLocalizedPath('/layanan/kesiswaan', locale)} class="text-gray-400 hover:text-white transition-colors text-sm">{t('services.student_affairs', locale)}</a></li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="font-bold text-lg mb-4">{t('footer.contact_info', locale)}</h3>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <Icon name="tabler:map-pin" class="w-5 h-5 text-primary-400 flex-shrink-0 mt-0.5" />
            <span class="text-gray-400 text-sm">{site.site.address}</span>
          </li>
          <li class="flex items-center gap-3">
            <Icon name="tabler:phone" class="w-5 h-5 text-primary-400 flex-shrink-0" />
            <a href={`tel:${site.site.phone}`} class="text-gray-400 hover:text-white transition-colors text-sm">{site.site.phone}</a>
          </li>
          <li class="flex items-center gap-3">
            <Icon name="tabler:mail" class="w-5 h-5 text-primary-400 flex-shrink-0" />
            <a href={`mailto:${site.site.email}`} class="text-gray-400 hover:text-white transition-colors text-sm">{site.site.email}</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="container-custom py-4 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        Â© {currentYear} {site.site.name}. {t('footer.all_rights', locale)}
      </p>
      <p class="text-gray-500 text-sm">
        Built with <a href="https://github.com/ahliweb/awcms" target="_blank" rel="noopener" class="text-primary-400 hover:text-primary-300">AWCMS Framework</a>
      </p>
    </div>
  </div>
</footer>
