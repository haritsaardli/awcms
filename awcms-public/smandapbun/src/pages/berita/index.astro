---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../../utils/i18n";
import { getPosts } from "../../lib/api";

const locale = getLocale(Astro.url) as Locale;
const posts = await getPosts(100);
// posts are already sorted by default from API
---

<Layout title={t("news.title", locale)}>
  <!-- Hero -->
  <section
    class="hero-gradient text-white py-16 md:py-24"
    data-testid="news-hero"
  >
    <div class="container-custom">
      <p class="text-secondary-300 font-medium mb-2">{t("nav.news", locale)}</p>
      <h1 class="text-4xl md:text-5xl font-bold font-heading">
        {t("news.latest", locale)}
      </h1>
    </div>
  </section>

  <!-- News Grid -->
  <section class="py-16 bg-gray-50" data-testid="news-list">
    <div class="container-custom">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <div class="grid md:grid-cols-2 gap-6">
            {
              posts.map((news) => (
                <article
                  class="card group hover:shadow-xl transition-shadow"
                  data-testid={`news-item-${news.id}`}
                >
                  <div class="aspect-video bg-gray-200 overflow-hidden">
                    <img
                      src={
                        news.image ||
                        `https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=400&h=225&fit=crop`
                      }
                      alt={getLocalizedValue(news.title, locale)}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                  <div class="p-5">
                    <div class="flex items-center gap-2 text-xs text-gray-500 mb-2">
                      <span class="bg-primary-100 text-primary-600 px-2 py-0.5 rounded">
                        {news.category}
                      </span>
                      <span>
                        {new Date(news.published_at).toLocaleDateString(
                          locale === "id" ? "id-ID" : "en-US",
                        )}
                      </span>
                    </div>
                    <h3 class="font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors line-clamp-2">
                      {getLocalizedValue(news.title, locale)}
                    </h3>
                    <p class="text-gray-600 text-sm line-clamp-2 mb-3">
                      {getLocalizedValue(news.excerpt, locale)}
                    </p>
                    <a
                      href={getLocalizedPath(`/berita/${news.slug}`, locale)}
                      class="text-primary-600 font-medium text-sm flex items-center hover:text-primary-700"
                    >
                      {t("common.read_more", locale)}
                      <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
                    </a>
                  </div>
                </article>
              ))
            }
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <a
            href={getLocalizedPath("/berita/agenda", locale)}
            class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 transition-colors"
          >
            <span class="text-gray-700">{t("news.agenda", locale)}</span>
            <Icon name="tabler:chevron-right" class="w-5 h-5 text-gray-400" />
          </a>
          <a
            href={getLocalizedPath("/berita/galeri", locale)}
            class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-50 transition-colors"
          >
            <span class="text-gray-700">{t("news.gallery", locale)}</span>
            <Icon name="tabler:chevron-right" class="w-5 h-5 text-gray-400" />
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
