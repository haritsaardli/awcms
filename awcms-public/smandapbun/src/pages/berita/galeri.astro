---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../../utils/i18n";
import { getGalleryData } from "../../lib/api";

const locale = getLocale(Astro.url) as Locale;
const galleryData = await getGalleryData();
const { gallery } = galleryData;
---

<Layout title={getLocalizedValue(gallery.title, locale)}>
  <!-- Hero -->
  <section
    class="hero-gradient text-white py-16 md:py-20"
    data-testid="gallery-hero"
  >
    <div class="container-custom">
      <nav class="text-sm text-blue-200 mb-4">
        <a href={getLocalizedPath("/", locale)} class="hover:text-white"
          >Beranda</a
        >
        <span class="mx-2">/</span>
        <a href={getLocalizedPath("/berita", locale)} class="hover:text-white"
          >{t("news.title", locale)}</a
        >
        <span class="mx-2">/</span>
        <span class="text-white">{t("news.gallery", locale)}</span>
      </nav>
      <h1 class="text-3xl md:text-4xl font-bold font-heading">
        {getLocalizedValue(gallery.title, locale)}
      </h1>
    </div>
  </section>

  <!-- Gallery -->
  <section class="py-16 bg-gray-50" data-testid="gallery-content">
    <div class="container-custom">
      {
        gallery.albums.map((album: any, albumIndex: number) => (
          <div class="mb-12" data-testid={`album-${albumIndex}`}>
            <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              <Icon name="tabler:photo" class="w-6 h-6 text-primary-600" />
              {getLocalizedValue(album.title, locale)}
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
              {album.images.map((_: string, imageIndex: number) => (
                <div
                  class="group relative aspect-square bg-gray-200 rounded-xl overflow-hidden cursor-pointer"
                  data-testid={`gallery-image-${albumIndex}-${imageIndex}`}
                >
                  <img
                    src={`https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=300&h=300&fit=crop&album=${albumIndex}&img=${imageIndex}`}
                    alt={`${getLocalizedValue(album.title, locale)} - ${imageIndex + 1}`}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                  />
                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-colors flex items-center justify-center">
                    <Icon
                      name="tabler:zoom-in"
                      class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity"
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }

      <!-- Back Button -->
      <div class="mt-8 text-center">
        <a
          href={getLocalizedPath("/berita", locale)}
          class="btn-outline"
          data-testid="back-to-news"
        >
          <Icon name="tabler:arrow-left" class="w-5 h-5 mr-2" />
          {t("common.back", locale)}
        </a>
      </div>
    </div>
  </section>
</Layout>
