---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../../utils/i18n";
import { getProfilePageData } from "../../lib/api";

const locale = getLocale(Astro.url) as Locale;
const profileData = await getProfilePageData();
const { history } = profileData;
---

<Layout title={getLocalizedValue(history.title, locale)}>
  <!-- Hero -->
  <section
    class="hero-gradient text-white py-16 md:py-20"
    data-testid="history-hero"
  >
    <div class="container-custom">
      <nav class="text-sm text-blue-200 mb-4">
        <a href={getLocalizedPath("/", locale)} class="hover:text-white"
          >Beranda</a
        >
        <span class="mx-2">/</span>
        <a href={getLocalizedPath("/profil", locale)} class="hover:text-white"
          >{t("profile.title", locale)}</a
        >
        <span class="mx-2">/</span>
        <span class="text-white">{t("profile.history", locale)}</span>
      </nav>
      <h1 class="text-3xl md:text-4xl font-bold font-heading">
        {getLocalizedValue(history.title, locale)}
      </h1>
    </div>
  </section>

  <!-- Content -->
  <section class="py-16 bg-gray-50" data-testid="history-content">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <!-- Main Content -->
        <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12 mb-12">
          <div
            class="prose prose-lg max-w-none"
            set:html={getLocalizedValue(history.content, locale)}
          />
        </div>

        <!-- Timeline -->
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">
            {locale === "id" ? "Tonggak Sejarah" : "Historical Milestones"}
          </h2>
          <div class="relative">
            <!-- Timeline Line -->
            <div
              class="absolute left-4 md:left-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-primary-500 via-primary-400 to-primary-300 rounded-full"
            >
            </div>

            {
              history.milestones.map((milestone: any, index: number) => (
                <div
                  class={`relative flex items-center mb-8 ${index % 2 === 0 ? "md:flex-row-reverse" : ""}`}
                  data-testid={`milestone-${milestone.year}`}
                >
                  <div
                    class={`w-full md:w-1/2 ${index % 2 === 0 ? "md:pl-12" : "md:pr-12 md:text-right"} pl-16 md:pl-0`}
                  >
                    <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
                      <div class="text-2xl font-bold text-primary-600 mb-2">
                        {milestone.year}
                      </div>
                      <p class="text-gray-600">
                        {getLocalizedValue(milestone.event, locale)}
                      </p>
                    </div>
                  </div>
                  <div class="absolute left-4 md:left-1/2 w-8 h-8 bg-primary-600 rounded-full transform md:-translate-x-1/2 -translate-x-1/2 border-4 border-white shadow-lg flex items-center justify-center">
                    <Icon name="tabler:star" class="w-4 h-4 text-white" />
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Stats -->
        <div class="bg-primary-600 rounded-2xl p-8 text-white text-center">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div>
              <div class="text-4xl font-bold">
                {new Date().getFullYear() - 1985}
              </div>
              <div class="text-blue-200 text-sm">
                {locale === "id" ? "Tahun Berdiri" : "Years Established"}
              </div>
            </div>
            <div>
              <div class="text-4xl font-bold">8500+</div>
              <div class="text-blue-200 text-sm">
                {locale === "id" ? "Total Alumni" : "Total Alumni"}
              </div>
            </div>
            <div>
              <div class="text-4xl font-bold">A</div>
              <div class="text-blue-200 text-sm">
                {locale === "id" ? "Akreditasi" : "Accreditation"}
              </div>
            </div>
            <div>
              <div class="text-4xl font-bold">100+</div>
              <div class="text-blue-200 text-sm">
                {locale === "id" ? "Prestasi" : "Achievements"}
              </div>
            </div>
          </div>
        </div>

        <!-- Back Button -->
        <div class="mt-8 text-center">
          <a
            href={getLocalizedPath("/profil", locale)}
            class="btn-outline"
            data-testid="back-to-profile"
          >
            <Icon name="tabler:arrow-left" class="w-5 h-5 mr-2" />
            {t("common.back", locale)}
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
