---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../../utils/i18n";
import { getProfilePageData } from "../../lib/api";

const locale = getLocale(Astro.url) as Locale;
const profileData = await getProfilePageData();
const { facilities, schoolCondition } = profileData;
---

<Layout title={getLocalizedValue(facilities.title, locale)}>
  <!-- Hero -->
  <section
    class="hero-gradient text-white py-16 md:py-20"
    data-testid="facilities-hero"
  >
    <div class="container-custom">
      <nav class="text-sm text-blue-200 mb-4">
        <a href={getLocalizedPath("/", locale)} class="hover:text-white"
          >Beranda</a
        >
        <span class="mx-2">/</span>
        <a href={getLocalizedPath("/profil", locale)} class="hover:text-white"
          >{t("profile.title", locale)}</a
        >
        <span class="mx-2">/</span>
        <span class="text-white">{t("profile.facilities", locale)}</span>
      </nav>
      <h1 class="text-3xl md:text-4xl font-bold font-heading">
        {getLocalizedValue(facilities.title, locale)}
      </h1>
    </div>
  </section>

  <!-- Area Stats -->
  <section class="py-8 bg-white shadow-sm relative -mt-6 z-10">
    <div class="container-custom">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-primary-600">
            {schoolCondition.statistics.landArea}
          </div>
          <div class="text-sm text-gray-500">
            {locale === "id" ? "Luas Tanah" : "Land Area"}
          </div>
        </div>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-green-600">
            {schoolCondition.statistics.buildingArea}
          </div>
          <div class="text-sm text-gray-500">
            {locale === "id" ? "Luas Bangunan" : "Building Area"}
          </div>
        </div>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-emerald-600">
            {schoolCondition.statistics.greenArea}
          </div>
          <div class="text-sm text-gray-500">
            {locale === "id" ? "Area Hijau" : "Green Area"}
          </div>
        </div>
        <div class="text-center">
          <div class="text-2xl md:text-3xl font-bold text-orange-600">
            {schoolCondition.statistics.parkingArea}
          </div>
          <div class="text-sm text-gray-500">
            {locale === "id" ? "Area Parkir" : "Parking Area"}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Facilities Grid -->
  <section class="py-16 bg-gray-50" data-testid="facilities-grid">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          facilities.items.map((facility: any, index: number) => (
            <div
              class="bg-white rounded-xl shadow-sm hover:shadow-lg transition-shadow overflow-hidden group"
              data-testid={`facility-card-${index}`}
            >
              <div class="h-48 bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center relative overflow-hidden">
                <div class="absolute inset-0 bg-primary-600/10 group-hover:bg-primary-600/20 transition-colors" />
                <div class="text-6xl font-bold text-primary-600/30">
                  {facility.count}
                </div>
                <div class="absolute bottom-4 right-4 w-12 h-12 bg-white rounded-full flex items-center justify-center shadow-lg">
                  <Icon
                    name={
                      facility.name.en.includes("Class")
                        ? "tabler:school"
                        : facility.name.en.includes("Laboratory") ||
                            facility.name.en.includes("Science")
                          ? "tabler:flask"
                          : facility.name.en.includes("Computer")
                            ? "tabler:device-desktop"
                            : facility.name.en.includes("Language")
                              ? "tabler:language"
                              : facility.name.en.includes("Library")
                                ? "tabler:books"
                                : facility.name.en.includes("Mosque")
                                  ? "tabler:building-mosque"
                                  : facility.name.en.includes("Hall")
                                    ? "tabler:building"
                                    : facility.name.en.includes("Sports")
                                      ? "tabler:ball-football"
                                      : facility.name.en.includes("Canteen")
                                        ? "tabler:coffee"
                                        : facility.name.en.includes("Health")
                                          ? "tabler:first-aid-kit"
                                          : "tabler:building"
                    }
                    class="w-6 h-6 text-primary-600"
                  />
                </div>
              </div>
              <div class="p-6">
                <div class="flex items-center justify-between mb-2">
                  <h3 class="font-bold text-lg text-gray-900">
                    {getLocalizedValue(facility.name, locale)}
                  </h3>
                  <span class="text-3xl font-bold text-primary-600">
                    {facility.count}
                  </span>
                </div>
                <p class="text-gray-600 text-sm mb-3">
                  {getLocalizedValue(facility.description, locale)}
                </p>
                <div class="flex items-center gap-2">
                  <span
                    class={`px-2 py-1 rounded text-xs font-medium ${
                      facility.condition === "Baik"
                        ? "bg-green-100 text-green-700"
                        : "bg-yellow-100 text-yellow-700"
                    }`}
                  >
                    {facility.condition === "Baik"
                      ? locale === "id"
                        ? "Kondisi Baik"
                        : "Good Condition"
                      : facility.condition}
                  </span>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- Back Button -->
      <div class="mt-12 text-center">
        <a
          href={getLocalizedPath("/profil", locale)}
          class="btn-outline"
          data-testid="back-to-profile"
        >
          <Icon name="tabler:arrow-left" class="w-5 h-5 mr-2" />
          {t("common.back", locale)}
        </a>
      </div>
    </div>
  </section>
</Layout>
