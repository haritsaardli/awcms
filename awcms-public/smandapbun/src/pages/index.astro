---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../utils/i18n";
import { getSiteData, getPosts } from "../lib/api";

const locale = getLocale(Astro.url) as Locale;
const site = await getSiteData();
const posts = await getPosts();
const featuredNews = posts.filter((a) => a.featured).slice(0, 3);
---

<Layout title={t("home.school_name", locale)}>
  <!-- Hero Section -->
  <section
    class="hero-gradient text-white relative overflow-hidden"
    data-testid="hero-section"
  >
    <div class="absolute inset-0 bg-black/30"></div>
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute top-20 left-10 w-72 h-72 bg-white rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-20 right-10 w-96 h-96 bg-secondary-400 rounded-full blur-3xl"
      >
      </div>
    </div>
    <div class="container-custom py-20 md:py-32 relative z-10">
      <div class="max-w-3xl">
        <p class="text-secondary-300 font-medium mb-4 animate-fade-in">
          {t("home.welcome", locale)}
        </p>
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 font-heading animate-fade-in"
          style="animation-delay: 0.1s;"
        >
          {site.site.name}
        </h1>
        <p
          class="text-xl md:text-2xl text-blue-100 mb-8 animate-fade-in"
          style="animation-delay: 0.2s;"
        >
          {site.site.tagline}
        </p>
        <div
          class="flex flex-wrap gap-4 animate-fade-in"
          style="animation-delay: 0.3s;"
        >
          <a
            href={getLocalizedPath("/profil", locale)}
            class="btn-secondary"
            data-testid="hero-profile-btn"
          >
            <Icon name="tabler:building" class="w-5 h-5 mr-2" />
            {t("profile.title", locale)}
          </a>
          <a
            href={getLocalizedPath("/kontak", locale)}
            class="btn-outline border-white text-white hover:bg-white hover:text-primary-600"
            data-testid="hero-contact-btn"
          >
            <Icon name="tabler:phone" class="w-5 h-5 mr-2" />
            {t("common.contact_us", locale)}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section
    class="py-12 bg-white relative -mt-8 z-20"
    data-testid="stats-section"
  >
    <div class="container-custom">
      <div
        class="bg-white rounded-2xl shadow-2xl p-6 md:p-8 grid grid-cols-2 md:grid-cols-4 gap-6"
      >
        <div class="text-center">
          <div
            class="text-3xl md:text-4xl font-bold text-primary-600 mb-1"
            data-testid="stat-students"
          >
            {site.stats.students.toLocaleString()}+
          </div>
          <div class="text-gray-500 text-sm">
            {t("home.stats_students", locale)}
          </div>
        </div>
        <div class="text-center">
          <div
            class="text-3xl md:text-4xl font-bold text-primary-600 mb-1"
            data-testid="stat-teachers"
          >
            {site.stats.teachers}+
          </div>
          <div class="text-gray-500 text-sm">
            {t("home.stats_teachers", locale)}
          </div>
        </div>
        <div class="text-center">
          <div
            class="text-3xl md:text-4xl font-bold text-primary-600 mb-1"
            data-testid="stat-staff"
          >
            {site.stats.staff}+
          </div>
          <div class="text-gray-500 text-sm">
            {t("home.stats_staff", locale)}
          </div>
        </div>
        <div class="text-center">
          <div
            class="text-3xl md:text-4xl font-bold text-primary-600 mb-1"
            data-testid="stat-extracurriculars"
          >
            {site.stats.extracurriculars}+
          </div>
          <div class="text-gray-500 text-sm">
            {t("home.stats_extracurriculars", locale)}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 md:py-24 bg-gray-50" data-testid="about-section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-primary-600 font-medium mb-2">
            {t("home.about_title", locale)}
          </p>
          <h2 class="section-title">{site.site.name}</h2>
          <p class="text-gray-600 mb-6">{t("home.about_desc", locale)}</p>
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="bg-white p-4 rounded-xl">
              <div class="text-2xl font-bold text-primary-600">
                {site.accreditation}
              </div>
              <div class="text-sm text-gray-500">Akreditasi</div>
            </div>
            <div class="bg-white p-4 rounded-xl">
              <div class="text-2xl font-bold text-primary-600">
                {site.established}
              </div>
              <div class="text-sm text-gray-500">Berdiri</div>
            </div>
          </div>
          <a
            href={getLocalizedPath("/profil/visi-misi", locale)}
            class="btn-primary"
            data-testid="about-cta"
          >
            {t("common.learn_more", locale)}
            <Icon name="tabler:arrow-right" class="w-5 h-5 ml-2" />
          </a>
        </div>
        <div class="relative">
          <div
            class="aspect-video bg-gradient-to-br from-primary-100 to-primary-200 rounded-2xl overflow-hidden"
          >
            <img
              src="https://images.unsplash.com/photo-1580582932707-520aed937b7b?w=800&h=450&fit=crop"
              alt="Sekolah"
              class="w-full h-full object-cover"
            />
          </div>
          <div
            class="absolute -bottom-6 -left-6 bg-secondary-500 text-white p-6 rounded-xl shadow-lg"
          >
            <div class="text-3xl font-bold">
              {new Date().getFullYear() - parseInt(site.established)}+
            </div>
            <div class="text-sm">Tahun Pengalaman</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Links Section -->
  <section class="py-16 bg-white" data-testid="quick-links-section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="section-title">{t("home.quick_links", locale)}</h2>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <a
          href="#"
          class="group card p-6 text-center hover:shadow-xl transition-shadow"
          data-testid="quick-link-ppdb"
        >
          <div
            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-500 transition-colors"
          >
            <Icon
              name="tabler:users-plus"
              class="w-8 h-8 text-primary-600 group-hover:text-white transition-colors"
            />
          </div>
          <h3 class="font-semibold text-gray-900">{t("home.ppdb", locale)}</h3>
        </a>
        <a
          href="#"
          class="group card p-6 text-center hover:shadow-xl transition-shadow"
          data-testid="quick-link-calendar"
        >
          <div
            class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-green-500 transition-colors"
          >
            <Icon
              name="tabler:calendar"
              class="w-8 h-8 text-green-600 group-hover:text-white transition-colors"
            />
          </div>
          <h3 class="font-semibold text-gray-900">
            {t("home.academic_calendar", locale)}
          </h3>
        </a>
        <a
          href="#"
          class="group card p-6 text-center hover:shadow-xl transition-shadow"
          data-testid="quick-link-elearning"
        >
          <div
            class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-orange-500 transition-colors"
          >
            <Icon
              name="tabler:device-laptop"
              class="w-8 h-8 text-orange-600 group-hover:text-white transition-colors"
            />
          </div>
          <h3 class="font-semibold text-gray-900">
            {t("home.e_learning", locale)}
          </h3>
        </a>
        <a
          href={getLocalizedPath("/layanan/perpustakaan", locale)}
          class="group card p-6 text-center hover:shadow-xl transition-shadow"
          data-testid="quick-link-library"
        >
          <div
            class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-purple-500 transition-colors"
          >
            <Icon
              name="tabler:books"
              class="w-8 h-8 text-purple-600 group-hover:text-white transition-colors"
            />
          </div>
          <h3 class="font-semibold text-gray-900">
            {t("home.digital_library", locale)}
          </h3>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest News Section -->
  <section class="py-16 md:py-24 bg-gray-50" data-testid="news-section">
    <div class="container-custom">
      <div class="flex justify-between items-end mb-12">
        <div>
          <p class="text-primary-600 font-medium mb-2">
            {t("news.title", locale)}
          </p>
          <h2 class="section-title mb-0">{t("home.latest_news", locale)}</h2>
        </div>
        <a
          href={getLocalizedPath("/berita", locale)}
          class="hidden md:flex items-center text-primary-600 font-medium hover:text-primary-700"
          data-testid="news-view-all"
        >
          {t("common.view_all", locale)}
          <Icon name="tabler:arrow-right" class="w-5 h-5 ml-1" />
        </a>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          featuredNews.map((news) => (
            <article
              class="card group hover:shadow-xl transition-shadow"
              data-testid={`news-card-${news.id}`}
            >
              <div class="aspect-video bg-gray-200 overflow-hidden">
                <img
                  src={
                    news.image ||
                    `https://images.unsplash.com/photo-1523050854058-8df90110c9f1?w=400&h=225&fit=crop`
                  }
                  alt={getLocalizedValue(news.title, locale)}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
                  <Icon name="tabler:calendar" class="w-4 h-4" />
                  {new Date(news.published_at).toLocaleDateString(
                    locale === "id" ? "id-ID" : "en-US",
                    {
                      day: "numeric",
                      month: "long",
                      year: "numeric",
                    },
                  )}
                </div>
                <h3 class="font-bold text-lg text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                  {getLocalizedValue(news.title, locale)}
                </h3>
                <p class="text-gray-600 text-sm line-clamp-2 mb-4">
                  {getLocalizedValue(news.excerpt, locale)}
                </p>
                <a
                  href={getLocalizedPath(`/berita/${news.slug}`, locale)}
                  class="text-primary-600 font-medium text-sm flex items-center hover:text-primary-700"
                >
                  {t("common.read_more", locale)}
                  <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
                </a>
              </div>
            </article>
          ))
        }
      </div>
      <div class="mt-8 text-center md:hidden">
        <a href={getLocalizedPath("/berita", locale)} class="btn-primary">
          {t("common.view_all", locale)}
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section
    class="py-16 md:py-24 hero-gradient text-white relative overflow-hidden"
    data-testid="cta-section"
  >
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="container-custom relative z-10 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        {locale === "id" ? "Bergabunglah Bersama Kami" : "Join Us"}
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        {
          locale === "id"
            ? "Jadilah bagian dari keluarga besar SMAN 2 Pangkalan Bun dan raih masa depan gemilang bersama kami."
            : "Become part of the SMAN 2 Pangkalan Bun family and achieve a bright future with us."
        }
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="#" class="btn-secondary" data-testid="cta-ppdb">
          <Icon name="tabler:file-text" class="w-5 h-5 mr-2" />
          {t("home.ppdb", locale)}
        </a>
        <a
          href={getLocalizedPath("/kontak", locale)}
          class="btn-outline border-white text-white hover:bg-white hover:text-primary-600"
          data-testid="cta-contact"
        >
          <Icon name="tabler:phone" class="w-5 h-5 mr-2" />
          {t("common.contact_us", locale)}
        </a>
      </div>
    </div>
  </section>
</Layout>
