---
import { UI } from 'astrowind:config';

// TODO: This code is temporary
---

<script is:inline define:vars={{ defaultTheme: UI.theme || 'system' }}>
  function applyTheme(theme) {
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
    }
    const matches = document.querySelectorAll('[data-aw-toggle-color-scheme] > input');

    if (matches && matches.length) {
      matches.forEach((elem) => {
        elem.checked = theme !== 'dark';
      });
    }
  }

  const STORAGE_KEY = 'awcms_theme';
  const OLD_KEY = 'theme';

  let currentTheme = localStorage.getItem(STORAGE_KEY);
  
  // Migration
  if (!currentTheme && localStorage.getItem(OLD_KEY)) {
    currentTheme = localStorage.getItem(OLD_KEY);
    localStorage.setItem(STORAGE_KEY, currentTheme);
    localStorage.removeItem(OLD_KEY);
  }

  // Fallback to config default if nothing stored
  if (!currentTheme) {
      // If config forces a theme (ends with :only), respect it
      if ((defaultTheme && defaultTheme.endsWith(':only')) || defaultTheme !== 'system') {
        currentTheme = defaultTheme.replace(':only', '');
      } else {
        currentTheme = 'system';
      }
  }

  // Resolve 'system' to actual preference
  if (currentTheme === 'dark' || (currentTheme === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
    applyTheme('dark');
  } else {
    applyTheme('light');
  }
</script>
