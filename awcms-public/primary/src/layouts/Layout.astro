---
import '../styles/global.css'; // Keep global styles if they don't fight too hard, or remove if Pongo is totally self-contained. 
// Pongo relies on Bootstrap files in /assets/, so we'll link them in <head>

import Header from '../templates/pongo/components/layout/Header.astro';
import Footer from '../templates/pongo/components/layout/Footer.astro';
import { tenantUrl } from '../lib/url';
import { createScopedClient } from '../lib/supabase';
import type { MenuItemDTO } from '../types/MenuDTO';

interface Props {
  title: string;
  description?: string;
  tenantSlug?: string;
}

const { title, description, tenantSlug } = Astro.props;

// Resolve tenant slug
const resolvedTenantSlug = tenantSlug !== undefined
  ? tenantSlug
  : (Astro.locals.tenant_source === 'path' ? Astro.locals.tenant_slug : '');
const actualTenantSlug = Astro.locals.tenant_slug || 'primary';
const isHostBased = resolvedTenantSlug === '';
const { tenant_id, runtime } = Astro.locals;
const env = runtime?.env || {};

// Build canonical URL
const pathWithoutTenant = resolvedTenantSlug
  ? Astro.url.pathname.replace(`/${resolvedTenantSlug}`, '') || '/'
  : Astro.url.pathname || '/';
const canonicalPath = tenantUrl(resolvedTenantSlug, pathWithoutTenant);
const canonicalUrl = new URL(canonicalPath, Astro.url.origin).href;

// Initialize Scoped Client
const supabase = createScopedClient({
    'x-tenant-id': tenant_id
}, env);

// Fetch Data (Tenant Name & Menu)
let menuItems: MenuItemDTO[] = [];
let brandName = "AWCMS";

if (tenant_id && supabase) {
    // 1. Get Tenant Name
    const { data: tenantData } = await supabase
        .from('tenants')
        .select('name')
        .eq('id', tenant_id)
        .single();
    
    if (tenantData) {
        brandName = tenantData.name;
    }

    // 2. Get Main Menu
    const { data: menuData } = await supabase
        .from('menus')
        .select('id')
        .eq('tenant_id', tenant_id)
        .eq('slug', 'main')
        .eq('is_active', true)
        .single();
    
    if (menuData) {
        const { data: items } = await supabase
            .from('menu_items')
            .select('label, url, parent_id, order')
            .eq('menu_id', menuData.id)
            .order('order');
        
        if (items) {
            const normalizeMenuUrl = (url = '') => {
                const trimmed = url.trim();
                if (!trimmed) return '/';
                if (trimmed.startsWith('http://') || trimmed.startsWith('https://') || trimmed.startsWith('mailto:') || trimmed.startsWith('tel:') || trimmed.startsWith('#')) {
                    return trimmed;
                }
                const normalized = trimmed.startsWith('/') ? trimmed : `/${trimmed}`;
                if (!isHostBased) return normalized;
                const prefix = `/${actualTenantSlug}`;
                if (normalized === prefix) return '/';
                if (normalized.startsWith(`${prefix}/`)) {
                    return normalized.slice(prefix.length);
                }
                return normalized;
            };

            const buildTree = (items: any[]) => {
                const map: any = {};
                const roots: any[] = [];
                items.forEach((item, i) => {
                    map[item.id] = { ...item, index: i, children: [] };
                });
                items.forEach(item => {
                    if (item.parent_id && map[item.parent_id]) {
                        map[item.parent_id].children.push(map[item.id]);
                    } else {
                        roots.push(map[item.id]);
                    }
                });
                return roots;
            };

            // Fix: we need IDs for tree building, assuming items have IDs (not selected above, adding wildcard to be safe in real code, but here I'll assume they were fetched or I need to fetch them)
            // Re-fetch with ID for tree structure if needed, or strictly hierarchical.
            // Simplified for now: standard flat map was in original code? No, original code was:
            // menuItems = items.map...
            // But Pongo Header supports submenus. I will stick to flat for now to match original logic unless I fetch IDs.
            // Wait, original logic didn't build tree. It just filtered.
            // For Pongo, I should probably pass flat items and let Header handle it, OR just pass flat.
            // Let's stick to flat mapping as per original code to minimize diff risks, but the Pongo Header I wrote supports children.
            // I'll leave it as flat list for now to match original Logic, header will just render top level.
            
            menuItems = items.map((item: any) => ({
                ...item,
                url: normalizeMenuUrl(item.url)
            }));
        }
    }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description || "AWCMS Content"} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description || "AWCMS Content"} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />

    <!-- Pongo Template Assets -->
    <link href="/assets/css/themify-icons.css" rel="stylesheet">
    <link href="/assets/css/flaticon.css" rel="stylesheet">
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets/css/animate.css" rel="stylesheet">
    <link href="/assets/css/owl.carousel.css" rel="stylesheet">
    <link href="/assets/css/owl.theme.css" rel="stylesheet">
    <link href="/assets/css/slick.css" rel="stylesheet">
    <link href="/assets/css/slick-theme.css" rel="stylesheet">
    <link href="/assets/css/swiper.min.css" rel="stylesheet">
    <link href="/assets/css/owl.transitions.css" rel="stylesheet">
    <link href="/assets/css/jquery.fancybox.css" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet">

  </head>
  <body>
    <!-- page-wrapper -->
    <div class="page-wrapper">
        <!-- Preloader (Optional, skipping for simple hydration or adding if needed) -->
        
        <Header siteName={brandName} menuItems={menuItems} tenantSlug={resolvedTenantSlug} />
        
        <!-- Main Content -->
        <slot />
        
        <Footer siteName={brandName} tenantSlug={resolvedTenantSlug} />
    </div>
    <!-- end page-wrapper -->

    <!-- Scripts -->
    <script is:inline src="/assets/js/jquery.min.js"></script>
    <script is:inline src="/assets/js/bootstrap.min.js"></script>
    <script is:inline src="/assets/js/jquery-plugin-collection.js"></script>
    <script is:inline src="/assets/js/script.js"></script>
  </body>
</html>
